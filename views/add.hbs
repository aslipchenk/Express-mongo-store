<h1>Add new course</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}
<form action="/add" method="POST" novalidate>
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Name of Course</label>
        <span class="helper-text" data-error="Input name correctly"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required value="{{data.price}}">
        <label for="price">Price of Course</label>
        <span class="helper-text" data-error="Input price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required min="1" value="{{data.img}}">
        <label for="img">URL of image</label>
        <span class="helper-text" data-error="Input url of image"></span>
    </div>
    <input type="hidden" name="_csrf" value={{csrf}}>

    <button class="btn btn-primary">Add course</button>

</form>